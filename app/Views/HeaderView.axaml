<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="app.Views.HeaderView">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<!-- Organization/Project Dropdowns -->
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
			<ComboBox Width="150" Margin="5" Items="{Binding Organizations}" SelectedItem="{Binding SelectedOrganization}"/>
			<ComboBox Width="150" Margin="5" Items="{Binding Projects}" SelectedItem="{Binding SelectedProject}"/>
		</StackPanel>

		<!-- Links and User Settings -->
		<StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
			<Button Content="Playground" Command="{Binding NavigateCommand}" CommandParameter="Playground" Margin="5"/>
			<Button Content="Docs" Command="{Binding NavigateCommand}" CommandParameter="Docs" Margin="5"/>
			<Button Content="API Reference" Command="{Binding NavigateCommand}" CommandParameter="API Reference" Margin="5"/>
			<Button Content="Settings" Command="{Binding NavigateCommand}" CommandParameter="Settings" Margin="5">
				<Button.Content>
					<Path Data="F1 M 10,20 L 20,20 L 20,10 L 10,10 Z" Fill="Black"/>
				</Button.Content>
			</Button>
			<ComboBox Width="150" Margin="5" Items="{Binding UserAccounts}" SelectedItem="{Binding SelectedUserAccount}"/>
		</StackPanel>
	</Grid>
</UserControl>
