<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:app.ViewModels"
             x:Class="app.Views.SidebarView"
			 x:DataType="vm:SidebarViewModel"
             mc:Ignorable="d">

	<StackPanel>
		<TextBlock Text="&#xF3A5;Playground" FontFamily="{StaticResource FontAwesome}"/>
		<Button Content="Chat" Command="{Binding NavigateCommand}" CommandParameter="Chat" Margin="5"/>
		<Button Content="Realtime" Command="{Binding NavigateCommand}" CommandParameter="Realtime" Margin="5"/>
		<Button Content="Assistants" Command="{Binding NavigateCommand}" CommandParameter="Assistants" Margin="5"/>
		<Button Content="TTS" Command="{Binding NavigateCommand}" CommandParameter="TTS" Margin="5"/>
		<Button Content="Help" Command="{Binding NavigateCommand}" CommandParameter="Help" Margin="5" VerticalAlignment="Bottom"/>
	</StackPanel>
</UserControl>
