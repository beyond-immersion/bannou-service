{
  "$schema": "http://json.schemastore.org/template",
  "author": "Bannou Platform",
  "classifications": [
    "Test",
    "Unit Test",
    "Bannou"
  ],
  "identity": "BannouService.UnitTest",
  "name": "Bannou Service Unit Test Project",
  "description": "A template for creating unit test projects for Bannou service plugins",
  "shortName": "bannou-test",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ServiceName",
  "preferNameDirectory": true,
  "symbols": {
    "ServiceName": {
      "type": "parameter",
      "description": "The name of the service to create tests for",
      "datatype": "string",
      "isRequired": true,
      "replaces": "ServiceName"
    },
    "ServiceNamePascal": {
      "type": "derived",
      "valueSource": "ServiceName",
      "valueTransform": "firstUpperCase",
      "replaces": "ServiceNamePascal"
    },
    "ServicePluginName": {
      "type": "derived",
      "valueSource": "ServiceName",
      "valueTransform": "firstLowerCase",
      "replaces": "servicename"
    }
  },
  "primaryOutputs": [
    {
      "path": "ServiceName.Tests.csproj"
    }
  ]
}
