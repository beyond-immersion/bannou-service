<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

	<PropertyGroup>
		<RootNamespace>$(RootNamespace).Behavior</RootNamespace>
		<ServiceLib>behavior</ServiceLib>
	</PropertyGroup>

	<ItemGroup>
		<!-- YamlDotNet also comes from bannou-service but at different version - keep explicit -->
		<PackageReference Include="YamlDotNet" Version="16.3.0" />
	</ItemGroup>

	<ItemGroup>
		<!-- Reference the standalone behavior-compiler SDK for compilation and runtime types -->
		<ProjectReference Include="../../sdks/behavior-compiler/BeyondImmersion.Bannou.BehaviorCompiler.csproj" />
		<!-- Reference the behavior-expressions SDK for expression evaluation -->
		<ProjectReference Include="../../sdks/behavior-expressions/BeyondImmersion.Bannou.BehaviorExpressions.csproj" />
	</ItemGroup>

</Project>
