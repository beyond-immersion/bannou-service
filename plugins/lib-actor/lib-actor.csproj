<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Actor</RootNamespace>
    <ServiceLib>actor</ServiceLib>
  </PropertyGroup>

  <ItemGroup>
    <!-- lib-behavior: Required - provides actual ABML execution types (Handlers, Archetypes, Control) -->
    <!-- NOT generated code - these are manual implementation classes for cognition system -->
    <ProjectReference Include="../lib-behavior/lib-behavior.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only packages NOT provided by bannou-service - NSwag, etc. come transitively -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.3.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
