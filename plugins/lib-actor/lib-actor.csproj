<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Actor</RootNamespace>
    <ServiceLib>actor</ServiceLib>
  </PropertyGroup>

  <ItemGroup>
    <!-- behavior-expressions SDK: Required for expression evaluation (IVariableScope, IExpressionEvaluator) -->
    <ProjectReference Include="../../sdks/behavior-expressions/BeyondImmersion.Bannou.BehaviorExpressions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only packages NOT provided by bannou-service - NSwag, etc. come transitively -->
  </ItemGroup>

  <ItemGroup>
    <!-- Embed seeded behavior YAML files as assembly resources -->
    <EmbeddedResource Include="Behaviors\*.yaml">
      <LogicalName>BeyondImmersion.BannouService.Actor.Behaviors.%(Filename)%(Extension)</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

</Project>
