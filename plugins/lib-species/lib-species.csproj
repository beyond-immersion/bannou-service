<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Species</RootNamespace>
    <ServiceLib>species</ServiceLib>
  </PropertyGroup>

  <ItemGroup>
    <!-- All service clients and models are in bannou-service/Generated/ - no cross-service references needed -->
    <ProjectReference Include="../lib-messaging/lib-messaging.csproj" />
    <ProjectReference Include="../lib-state/lib-state.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only packages NOT provided by bannou-service - NSwag, etc. come transitively -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.3.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
