<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Asset</RootNamespace>
    <ServiceLib>asset</ServiceLib>
  </PropertyGroup>

  <ItemGroup>
    <!-- Only packages NOT provided by bannou-service - NSwag, etc. come transitively -->
    <!-- MinIO S3-compatible storage provider -->
    <PackageReference Include="Minio" Version="7.0.0" />
    <!-- AWS SDK for presigned URLs (MinIO SDK has bug with Content-Type signing) -->
    <PackageReference Include="AWSSDK.S3" Version="4.0.0.3" />
    <!-- LZ4 compression for .bannou bundle format -->
    <PackageReference Include="K4os.Compression.LZ4" Version="1.3.8" />
    <!-- FFmpeg wrapper for audio/video transcoding -->
    <PackageReference Include="FFMpegCore" Version="5.1.0" />
  </ItemGroup>

  <!-- Shared bundle format library -->
  <ItemGroup>
    <ProjectReference Include="../../sdks/bundle-format/BeyondImmersion.Bannou.Bundle.Format.csproj" />
  </ItemGroup>

</Project>
