<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).State</RootNamespace>
    <ServiceLib>state</ServiceLib>
  </PropertyGroup>

  <!-- Embed Lua scripts as resources for RedisLuaScripts loader -->
  <ItemGroup>
    <EmbeddedResource Include="Scripts\*.lua" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only packages NOT provided by bannou-service - NSwag, etc. come transitively -->
    <!-- State store backends -->
    <PackageReference Include="StackExchange.Redis" Version="2.10.1" />
    <PackageReference Include="NRedisStack" Version="0.13.1" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.0" />
  </ItemGroup>

</Project>
