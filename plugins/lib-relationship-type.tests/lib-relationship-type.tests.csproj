<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>BeyondImmersion.BannouService.RelationshipType.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Build tools (xunit comes from test-utilities; Test.Sdk and Moq needed directly) -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.14.1" />
    <PackageReference Include="Moq" Version="4.20.72" />
    <PackageReference Include="xunit.runner.visualstudio" Version="3.1.5">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="6.0.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <!-- Logging.Abstractions, Mvc.Core come from lib-relationship-type â†’ bannou-service -->
  </ItemGroup>

  <ItemGroup>
    <!-- bannou-service comes transitively via lib-relationship-type -->
    <ProjectReference Include="../lib-relationship-type/lib-relationship-type.csproj" />
    <ProjectReference Include="../lib-messaging/lib-messaging.csproj" />
    <!-- Shared test utilities (ServiceConstructorValidator, etc.) -->
    <ProjectReference Include="../../test-utilities/test-utilities.csproj" />
  </ItemGroup>

</Project>
