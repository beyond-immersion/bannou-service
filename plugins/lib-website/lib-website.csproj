<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <ServiceLib>website</ServiceLib>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Website</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- NSwag.AspNetCore comes from bannou-service -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <!-- NSwag.MSBuild needed locally because bannou-service has PrivateAssets="all" -->
    <PackageReference Include="NSwag.MSBuild" Version="14.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\lib-messaging\lib-messaging.csproj" />
  </ItemGroup>

</Project>
