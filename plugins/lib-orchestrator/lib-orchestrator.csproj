<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ServiceLib.targets" />

  <PropertyGroup>
    <!-- Extends base RootNamespace from ServiceLib.targets -->
    <RootNamespace>$(RootNamespace).Orchestrator</RootNamespace>
    <ServiceLib>orchestrator</ServiceLib>
  </PropertyGroup>

  <ItemGroup>
    <!-- Docker client and orchestration packages -->
    <PackageReference Include="Docker.DotNet" Version="3.125.15" />
    <PackageReference Include="KubernetesClient" Version="18.0.13" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.3.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

</Project>
