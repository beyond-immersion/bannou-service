<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ServiceLib>website</ServiceLib>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>BeyondImmersion.BannouService.Website</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="lib-website.tests" />
    <!-- Required for Moq/Castle.Core to mock IStateStore<internal types> -->
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
  </ItemGroup>

  <ItemGroup>
    <!-- NSwag.AspNetCore comes from bannou-service -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <!-- NSwag.MSBuild needed locally because bannou-service has PrivateAssets="all" -->
    <PackageReference Include="NSwag.MSBuild" Version="14.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\bannou-service\bannou-service.csproj" />
    <ProjectReference Include="..\lib-messaging\lib-messaging.csproj" />
  </ItemGroup>

  <Import Project="../ServiceLib.targets" />

</Project>
