<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>

    <!-- SDK Version -->
    <VersionPrefix>0.1.0</VersionPrefix>

    <!-- NuGet Package Metadata -->
    <PackageId>BeyondImmersion.Bannou.AssetLoader.Client</PackageId>
    <Authors>BeyondImmersion</Authors>
    <Description>WebSocket-based asset source for Bannou Asset Loader. Provides URL resolution for game clients and developer tools using the Bannou Client SDK.</Description>
    <PackageTags>bannou;assets;websocket;client;gamedev</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/beyond-immersion/bannou-service</PackageProjectUrl>
    <RepositoryUrl>https://github.com/beyond-immersion/bannou-service</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Build settings -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Assembly info -->
    <RootNamespace>BeyondImmersion.Bannou.AssetLoader.Client</RootNamespace>
    <AssemblyName>BeyondImmersion.Bannou.AssetLoader.Client</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference core Asset Loader SDK -->
    <ProjectReference Include="../asset-loader/Bannou.AssetLoader.csproj" />
    <!-- Reference Bannou Client SDK for WebSocket connection -->
    <ProjectReference Include="../client/Bannou.Client.csproj" />
  </ItemGroup>

</Project>
