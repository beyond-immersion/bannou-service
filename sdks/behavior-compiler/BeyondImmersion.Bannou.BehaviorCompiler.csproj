<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- SDK Naming: PackageId, RootNamespace, AssemblyName must match -->
    <PackageId>BeyondImmersion.Bannou.BehaviorCompiler</PackageId>
    <RootNamespace>BeyondImmersion.Bannou.BehaviorCompiler</RootNamespace>
    <AssemblyName>BeyondImmersion.Bannou.BehaviorCompiler</AssemblyName>

    <!-- SDK Version: CI overrides with -p:Version=x.y.z or -p:VersionSuffix=preview.123 -->
    <VersionPrefix>0.1.0</VersionPrefix>

    <!-- NuGet Package Metadata -->
    <Authors>BeyondImmersion</Authors>
    <Description>ABML (Arcadia Behavior Markup Language) compiler and runtime SDK. Provides YAML parsing, semantic analysis, bytecode compilation, stack-based VM interpretation, GOAP planning, and intent merging for NPC behavior systems.</Description>
    <PackageTags>bannou;abml;behavior;npc;ai;goap;gamedev;compiler</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/beyond-immersion/bannou-service</PackageProjectUrl>
    <RepositoryUrl>https://github.com/beyond-immersion/bannou-service</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Parlot" Version="0.0.29" />
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

</Project>
