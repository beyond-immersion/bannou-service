<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- SDK Naming: PackageId, RootNamespace, AssemblyName must match -->
    <PackageId>BeyondImmersion.Bannou.Core</PackageId>
    <RootNamespace>BeyondImmersion.Bannou.Core</RootNamespace>
    <AssemblyName>BeyondImmersion.Bannou.Core</AssemblyName>

    <!-- Not published to NuGet yet - internal shared code -->
    <IsPackable>false</IsPackable>

    <!-- Documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <!-- No external dependencies - pure .NET types only -->

</Project>
